    <body>
        <%- include('../includes/navigation.ejs') %>

        <main>
            <% if (products.length > 0) { %>
                <ul>
                    <% for (p of products) { %>
                        <li>
                            <%= p.productData.title %> (<%= p.qty %>)
                        </li>
                    <% } %>
                </ul>
            <% } else { %>
                <h1>No products in the cart!</h1>
            <% } %>
        </main>

        <%- include('../includes/end.ejs') %>