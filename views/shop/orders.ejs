<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
            <ul>
                <% for (order of orders) { %>
                    <li>
                        <h1># <%= order._id %></h1>
                        <ul>
                            <% order.items.forEach(product => { %>
                                <li><%= product.title %> (<%= product.quantity %>)</li>
                            <% }); %>                                                    
                        </ul>
                    </li>
                <% } %>
            </ul>
            <% } else { %>
                <h1>No Orders Found!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>